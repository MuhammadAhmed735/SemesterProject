<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Colored border -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke android:color="#E6DFDF"  android:width="1dp"/>
        </shape>
    </item>
    <!-- Transparent inner area -->
    <item android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>